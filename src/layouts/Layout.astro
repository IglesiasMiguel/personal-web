---
// src/layouts/Layout.astro
import Head from '@/components/Head.astro';
import '@/styles/global.css';
import type { PageMeta } from '@/lib/constants';
import {
  FaGithub as Github,
  FaLinkedin as Linkedin,
  FaInstagram as Instagram,
} from 'react-icons/fa';
import CursorEffect from '@/components/CursorEffect';
import ScrollSpy from '@/components/ScrollSpy';

const props = Astro.props as PageMeta;
---

<!doctype html>
<html lang="en">
  <Head {...props} />
  <body class="bg-background text-foreground min-h-screen">
    <div class="flex flex-col md:flex-row min-h-screen">
      <!-- Mobile aside -->
      <aside
        class="flex md:hidden flex-col items-center gap-2 px-6 py-6 border-b border-border w-full bg-background"
      >
        <h1 class="text-2xl font-bold">Miguel Iglesias</h1>
        <p class="text-base">Informatics Engineer</p>
        <div class="flex gap-4 mt-2">
          <a href="#" aria-label="GitHub"><Github className="w-5 h-5 text-primary" /></a>
          <a href="#" aria-label="LinkedIn"><Linkedin className="w-5 h-5 text-primary" /></a>
          <a href="#" aria-label="Instagram"><Instagram className="w-5 h-5 text-primary" /></a>
        </div>
      </aside>
      <!-- Desktop Aside -->
      <aside
        class="hidden md:flex flex-col justify-between w-72 px-8 py-12 sticky top-0 h-screen border-r border-border bg-background"
      >
        <div>
          <h1 class="text-3xl font-bold mb-2">Miguel Iglesias</h1>
          <p class="text-lg mb-8">Informatics Engineer</p>
          <ScrollSpy client:load />
        </div>
        <div class="flex gap-4 mt-8">
          <a href="#" aria-label="GitHub"><Github className="w-5 h-5 text-primary" /></a>
          <a href="#" aria-label="LinkedIn"><Linkedin className="w-5 h-5 text-primary" /></a>
          <a href="#" aria-label="Instagram"><Instagram className="w-5 h-5 text-primary" /></a>
        </div>
      </aside>
      <!-- Main content -->
      <main class="flex-1 overflow-y-auto px-6 md:px-16 py-12 relative bg-background">
        <CursorEffect client:load />
        <slot />
      </main>
    </div>
  </body>
</html>

<style lang="scss">
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
